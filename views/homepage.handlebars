<div class="homepage col-md-12">

{{#if posts}}
{{#each posts as |post| }}
    <div class="row align-center p-5 post-div">
        <div class="col-md-6">
            <h2><a href="/api/posts/{{post.id}}">{{post.title}}</h2></a>
            <p>Posted on {{post.created_on}}</p>
        </div>
    </div>
{{/each}}
{{else}}
    <div class="row align-center mb-5 p-5">
        <h2>No posts yet! <span class="get-started"><a href="/dashboard">Get started here</a></span></h2>
    </div>
{{/if}}
</div>