<div class="col-md-12 p-5">
    <h2>New Post</h2>
    <form class="form post-form">
    <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" />
    </div>
    <div class="form-group">
        <label for="post-post">Post:</label>
        <textarea class="form-input" type="text" id="post-post"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-custom" type="submit">Submit</button>
    </div>
    </form>
</div>

{{#if posts}}
<div class="col-md-12 posts-div">
    {{#each posts as |post| }}
    <div class="row align-center post-div">
        <div class="col-md-6 ml-5 mb-3 p-3" id="{{post.id}}">
            <h2 id="title-text"><a href="/api/posts/{{post.id}}">{{post.title}}</a></h2>
            <p class="ml-2" id="post-text">{{post.post}}</p>
            <p>{{post.created_on}}</p> <button class="btn btn-custom edit-btn">Edit</button> <button class="btn delete-btn">Delete</button>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}

<script src="/js/dashboard.js"></script>