<div class="row align-center p-2 post-div">
    <div class="single col-md-12">
        <h2>{{post.title}}</h2>
        <p class="post-content ml-2">{{post.post}}</p>
        <p class="post-info">Posted by {{post.creator}} on {{post.created_on}}</p>
    </div>
</div>

{{#if post.comments}}
<div class="row align-center pl-2 pt-2 comments-div">
    <h3>Comments</h3>
    {{#each post.comments as |comment|}}
    <div class="comments col-md-12 pt-2">
        <p class="comment-content">{{comment.content}}<p>
        <p>Posted by {{comment.creator}} on {{comment.created_on}}</p>
    </div>
    {{/each}}
</div>
{{/if}}

<div class="row align-center p-2">
    <form class="form comment-form">
        <div class="form-group">
            <input class="form-input" type="text" id="comment-input" placeholder="Add a comment" />
        </div>
        <div class="form-group">
            <button class="btn btn-custom" type="submit">Submit</button>
        </div>
    </form>
</div>

<script src="/js/addComment.js"></script>